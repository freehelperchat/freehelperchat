{
  "name": "chat-server",
  "license": "MIT",
  "version": "0.4.0",
  "scripts": {
    "build": "tsc --project tsconfig.json && cd client && yarn install && yarn build",
    "postbuild": "run-script-os",
    "postbuild:linux:darwin": "rm -rf ./dist/build && mv ./client/build ./dist",
    "postbuild:windows": "if exist \"./dist/build/\" (rmdir \"./dist/build\" /Q /S && move ./client/build ./dist) else move ./client/build ./dist",
    "start": "node dist/server.js",
    "client": "cd client && yarn start",
    "server": "ts-node-dev --respawn --transpileOnly server.ts",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "installdeps": "yarn install && cd client && yarn install"
  },
  "dependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.0",
    "@types/mongoose": "^5.7.15",
    "@types/socket.io": "^2.1.4",
    "basic-auth": "^2.0.1",
    "body-parser": "^1.18.3",
    "celebrate": "^12.0.1",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "mongoose": "^5.9.4",
    "run-script-os": "^1.1.1",
    "socket.io": "^2.3.0",
    "ts-mongoose": "^0.0.21",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "concurrently": "^4.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.44"
  }
}
